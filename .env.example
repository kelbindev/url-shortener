# ===========================================
# URL Shortener Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# ===========================================

# Application Environment (Development, Staging, Production)
ASPNET_ENVIRONMENT=Development

# Database Configuration
DB_NAME=urlshortener
DB_USER=postgres
DB_PASSWORD=your-db-password-here

# Azure Key Vault Configuration
AZURE_KEYVAULT_URL=https://your-keyvault-name.vault.azure.net/
AZURE_SECRET_NAME=ConnectionString
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# JWT Configuration
JWT_KEY=your-jwt-secret-key-minimum-32-characters
JWT_ISSUER=https://localhost:8080
JWT_AUDIENCE=https://localhost:8080
JWT_EXPIRY_MINUTES=60

# Logging
LOG_LEVEL=Information
LOG_LEVEL_MS=Warning